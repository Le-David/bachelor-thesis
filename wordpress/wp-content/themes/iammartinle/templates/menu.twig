{% if navigation %}
	<nav id="menu" class="menu" role="navigation">
		<ul class="menu-list">
			{% for item in items %}
				<li class="{{ item.classes | join(' ') }} {{ item.current ? 'view-active' }}">
					<a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
					{% include "menu.twig" with {'items': item.children} %}
				</li>
			{% endfor %}
		</ul>
	</nav>
{% endif %}
