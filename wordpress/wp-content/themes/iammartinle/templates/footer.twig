<footer class="footer">
    <div class="site">
        <div class="footer-in">
            <div class="footer-socials">
                {% for item in social_channels.items %}
                    {% if item.post_title == 'email' %}
                        {% set email = item.url|replace({'https://':''}) %}
                    {% endif %}
                    <div class="footer-social">
                        <a class="footer-social-link" href='{{ item.post_title == "email" ? "mailto:" ~ email : item.url }}' target='{{ item.post_title != "email" ? "_blank" }}'>
                            {{ svgArray[item.post_title] ?: item.post_title }}
                        </a>
                    </div>
                {% endfor %}
            </div>
            <div class="footer-copyright">
                <p class="footer-copyright-text">Copyright {{"now"|date('Y')}}, made by <a class="footer-copyright-link" target="_blank" href="https://github.com/Le-David">Quang Dat Le</a></p>
            </div>
        </div>
    </div>
</footer>
